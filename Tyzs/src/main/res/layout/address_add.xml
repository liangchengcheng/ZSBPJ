<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:background="@drawable/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="收货地址"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_bz" />

            <TextView
                style="@style/ItemText"
                android:text="收件人信息：" />

            <EditText
                android:id="@+id/et_edit_linkman"
                style="@style/EditTextStyle"
                android:hint="请输入收件人信息"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </LinearLayout>

        <include layout="@layout/line" />


        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_bz" />

            <TextView
                style="@style/ItemText"
                android:text="收件人电话：" />

            <EditText
                android:id="@+id/et_edit_phone"
                style="@style/EditTextStyle"
                android:hint="请输入收件人电话"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:id="@+id/ll_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_count" />

            <TextView
                style="@style/ItemText"
                android:text="选择省:" />

            <TextView
                android:id="@+id/tv_province"
                style="@style/ItemText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="点击所在省份" />

            <ImageView
                android:id="@+id/iv_more_direction"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_expand_normal" />
        </LinearLayout>

        <include
            android:id="@+id/line_province"
            layout="@layout/line" />


        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_count" />

            <TextView
                style="@style/ItemText"
                android:text="所在市:" />

            <TextView
                android:id="@+id/tv_city"
                style="@style/ItemText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="点击所在省份" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_expand_normal" />
        </LinearLayout>

        <include
            android:id="@+id/line_city"
            layout="@layout/line" />

        <LinearLayout
            android:id="@+id/ll_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_count" />

            <TextView
                style="@style/ItemText"
                android:text="所在区县:" />

            <TextView
                android:id="@+id/tv_area"
                style="@style/ItemText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="点击ItemText" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_expand_normal" />
        </LinearLayout>

        <include
            android:id="@+id/line_area"
            layout="@layout/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_bz" />

            <TextView
                style="@style/ItemText"
                android:text="精确地址：" />

            <EditText
                android:id="@+id/et_edit_address"
                style="@style/EditTextStyle"
                android:hint="请输入详细地址精确到门牌号"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </LinearLayout>

        <include layout="@layout/line" />


        <CheckBox
            android:visibility="gone"
            android:padding="14dp"
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:text="是否设置为默认地址" />

        <include layout="@layout/line" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_edit_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="保存"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>