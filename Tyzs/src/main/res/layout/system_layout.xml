<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/iv_back"
            android:background="@drawable/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设 置"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_menu_item_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                style="@style/SettingMenuTvStyle"
                android:text="消息推送" />

            <Switch
                android:id="@+id/push_toggle"
                style="@style/SettingMenuRightStyle" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_act_viewline_common" />

        <RelativeLayout
            android:id="@+id/cacheLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_menu_item_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                style="@style/SettingMenuTvStyle"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/cacheSize"
                style="@style/SettingMenuRightStyle"
                android:text="1.42M" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_act_viewline_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_menu_item_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                style="@style/SettingMenuTvStyle"
                android:text="3G/4G流量离线缓存" />

            <Switch style="@style/SettingMenuRightStyle" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_act_viewline_common" />


        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_menu_item_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                style="@style/SettingMenuTvStyle"
                android:text="关于" />

            <ImageView
                style="@style/SettingMenuRightStyle"
                android:src="@drawable/arrow_right_grey" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_act_viewline_common" />


        <RelativeLayout
            android:id="@+id/checkUpgrade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_menu_item_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                style="@style/SettingMenuTvStyle"
                android:text="联系客服" />

            <TextView
                android:id="@+id/version_tv"
                style="@style/SettingMenuRightStyle"
                android:text="" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_act_viewline_common" />
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/logout"
                android:gravity="center"
                android:textColor="#FFF"
                android:padding="15dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:text="退出当前用户"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>