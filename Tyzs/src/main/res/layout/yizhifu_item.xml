<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_content"
    android:layout_height="wrap_content"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/list_item_bg">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:id="@+id/item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:textColor="#fff"
                android:textSize="14sp"
                android:id="@+id/tv_id"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:text="这个是标题"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_top"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#eee" />
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/rl2"
            android:layout_below="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_name"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:text="小米的手机"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/tv_name"
                android:textSize="14sp"
                android:id="@+id/tv_prince"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:text="实际支付200元"
                android:layout_height="wrap_content" />
            <TextView
                android:singleLine="true"
                android:layout_below="@+id/tv_prince"
                android:textSize="14sp"
                android:id="@+id/tv_time"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:text="创建时间2015年5月5日"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:id="@+id/item_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#eee" />
        <LinearLayout
            android:padding="5dp"
            android:layout_below="@+id/item_divider2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/red"
                android:background="@null"
                android:id="@+id/et_yuanyin"
                android:layout_weight="5"
                android:hint="退货需要填写原因"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />
            <TextView
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/btn_tr"
                android:textSize="14sp"
                android:text="申请退款"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>